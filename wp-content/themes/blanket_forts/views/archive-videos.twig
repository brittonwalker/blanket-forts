{% extends "index.twig" %}

{% set videos = [
        '631326522',
        '631282189',
        '631272731',
        '631260605',
        '631234594',
        '631231535',
        '631228476',
    ]
%}

{% block content %}
  <main class="">
	<ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 space-y-4 lg:space-y-0" id="video-grid">
		{% for item in videos %}
			<li class="lg:p-[3vw]">
        <div class="grid-video" data-video-src="https://player.vimeo.com/video/{{item}}">
          <div class="grid__img-wrap" title="Caption for gallery item {{ i }}" href="https://source.unsplash.com/random/1280x720">
            <img class="grid__img" src="https://source.unsplash.com/random/1280x720" alt="">
          </div>
        </div>
			</li>
		{% endfor %}
	</ul>
  </main>
  <div class="video-modal" id="video-modal">
    <div class="video-modal__header">
      <div class="video-modal__close">Close</div>  
    </div>
    <div class="video-modal__inner">
      <div class="video-modal__content">
      </div>
    </div>
    <div class="video-modal__footer">
      <figcaption class="video-modal__caption"></figcaption>
      <div class="video-modal__controls">
          <div class="video-modal__prev">Previous</div>
          <div class="video-modal__next">Next</div>
      </div>
    </div>
  </div>
{% endblock %}


